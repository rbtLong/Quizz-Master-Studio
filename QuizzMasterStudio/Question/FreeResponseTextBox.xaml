<UserControl x:Class="QuizzMasterStudio.Question.FreeResponseTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:rtb="clr-namespace:FsWpfControls.FsRichTextBox;assembly=FsRichTextBox"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Expander Header="Free Response Textbox" Grid.Row="0" Background="#eeeeee" IsExpanded="True"
                Margin="1,1,1,1" Name="expLayout">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <rtb:FsRichTextBox Margin="1,1,1,0" Grid.Row="1" Name="rtbDoc" />
        </Grid>
    </Expander>
</UserControl>
