<Window x:Class="QuizzUI.WndGameResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gm="clr-namespace:GameUserStatistics.ScoreBoard;assembly=GameUserStatistics"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        Title="WndGameResult" Height="375" Width="450" WindowStartupLocation="CenterScreen">
    <Grid Background="Transparent">
        <gm:ctrlScoreBoard Name="scoreBoard" MouseDown="scoreBoard_MouseDown" />
        <Button Width="45" Height="25" Content="Close" FontSize="15"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="15" Click="Button_Click"/>
    </Grid>
</Window>
